        @Html.DisplayFor(model => secondaryguardian.LastName)
        <div class="display-label">Phone</div>
        @Html.DisplayFor(model => secondaryguardian.Phone)
        <div class="display-label">RelationshipToChild</div>
        <div class="display-field">
        @Html.DisplayFor(model => secondaryguardian.RelationshipToChild)
        </div>
   </div>
        
   
    }
   </div>



    <div>
    @foreach (var a in Model.Children)
    {
    <div class="display-field">
        <b class="display-label">Child</b>
        <div class="display-label">First Name</div>
        @Html.DisplayFor(model => a.FirstName)
        <div class="display-label">Last Name</div>
        @Html.DisplayFor(model => a.LastName)
        <div class="display-label">Birthdate</div>
        @Html.DisplayFor(model => a.Birthdate)
        <div class="display-label">RelationshipToChild</div>
        <div class="display-field">
        @Html.DisplayFor(model => a.RelationshipToGuardian)
       </div>
        <div class="display-label">Allergies</div>
        @Html.DisplayFor(model => a.Allergies)


    </div>
    }
    </div>
</fieldset>
