@{
    var currentArea = ViewContext.RouteData.DataTokens["area"] as string ?? "Home";  
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    
     <link href="@Url.Content("~/Content/themes/base/modern.css")" rel="Stylesheet" type ="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/dropdown.js")" type="text/javascript"></script>
</head>
<body class = "metrouicss">
    <div class="page" id="@ViewBag.CurrentCenterId">
           <div id="header">
        <div id="title">
                <h1>
                <img src="/Content/themes/base/images/optionsmain.jpg" alt="Options Main"/>
                </h1>
               
        </div>
           <div id="logindisplay">
                @Html.Partial("_LogOnPartial", new { area = "" }, null)
            </div>
               </div>

                @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("Administrators"))
                        {      
                           <div class="nav-bar">
                        <div class="nav-bar-inner">
                       
                            <ul class="menu">
                                <li data-role="dropdown">
                                    <a>Admin Navigation</a>
                                    <ul class="dropdown-menu">
                                         <li>@Html.ActionLink("Administrator Home", "Index", "Report", new { area = "Admin" }, new { id = currentArea == "Admin"? "currentCenter":"" })</li>
                                             @Html.Action("Nav", "Admin", new { area = "Admin" })
                                    </ul>
                                </li>
              
                            </ul>
                        </div>
                    </div>


                         }
            
         
        <div id="admin_main">
            @RenderBody()
        </div>

</body>
</html>
