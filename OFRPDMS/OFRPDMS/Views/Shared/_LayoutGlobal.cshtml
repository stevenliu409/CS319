<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Admin Layout</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial", new { area = "" }, null)
            </div>
        </div>
        @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("Admin"))
        {
            <div id="admin_nav">
                <ul id="admin_menu">
                    <li>@Html.ActionLink("Admin", "Index", "Admin", new { area = "Admin" }, null)</li>
                    <li>@Html.ActionLink("Center1", "Index", "Staff", new { area = "Staff" }, null)</li>
                    <li>@Html.ActionLink("Center2", "Index", "Staff", new { area = "Staff" }, null)</li>
                </ul>
            </div>
        }
        <div id="admin_main">
            @RenderBody()
        </div>
    </div>
</body>
</html>
