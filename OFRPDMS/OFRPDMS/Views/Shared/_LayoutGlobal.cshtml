@{
    var currentArea = ViewContext.RouteData.DataTokens["area"] as string ?? "Home";  
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body id = "@ViewBag.CurrentPage">
    <div class="page" id="@ViewBag.CurrentCenterId">
        <div id="header">
            <div id="title">
                <h1>Options Community Services</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial", new { area = "" }, null)
            </div>
        </div>
        @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("Administrators"))
        {             
            <div id="admin_nav" >
                <ul id="admin_menu">
                    <li>@Html.ActionLink("Admin", "Index", "Admin", new { area = "Admin" }, new { id = currentArea == "Admin"? "currentCenter":"" })</li>
                    @Html.Action("Nav", "Admin", new { area = "Admin"})
                </ul>
            </div>
        }
        <div id="admin_main">
            @RenderBody()
        </div>
    </div>
</body>
</html>
