<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Admin Layout</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </div>
        <div id="admin_nav">
            <ul id="admin_menu">
                <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                <li>@Html.ActionLink("Center1", "Index", "Staff")</li>
                <li>@Html.ActionLink("Center2", "Index", "Staff")</li>
                <li>@Html.ActionLink("Center3", "Index", "Staff")</li>
            </ul>
        </div>
        <div id="admin_main">
            @RenderBody()
        </div>
    </div>
</body>
</html>
