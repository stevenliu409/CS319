@model OFRPDMS.Models.LibraryResource

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>LibraryResource</legend>

    <div class="display-label">Broken</div>
    <div class="display-field">@Model.Broken</div>

    <div class="display-label">CheckedOut</div>
    <div class="display-field">@Model.CheckedOut</div>

    <div class="display-label">Value</div>
    <div class="display-field">@String.Format("{0:F}", Model.Value)</div>

    <div class="display-label">Image</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Image).ToString()</div>

    <div class="display-label">Note</div>
    <div class="display-field">@Model.Note</div>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">ItemType</div>
    <div class="display-field">@Model.ItemType</div>

    <div class="display-label">Sanitized</div>
    <div class="display-field">@Model.Sanitized</div>

    <div class="display-label">PrimaryGuardianBorrows</div>
    <div class="display-field">@(Model.PrimaryGuardianBorrows == null ? "None" : Model.PrimaryGuardianBorrows.Count.ToString())</div>

    <div class="display-label">Center</div>
    <div class="display-field">@(Model.Center == null ? "None" : Model.Center.Name)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


