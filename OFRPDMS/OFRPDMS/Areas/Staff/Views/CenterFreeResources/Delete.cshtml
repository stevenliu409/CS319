@model OFRPDMS.Models.CenterFreeResource

@{
    ViewBag.Title = "Delete";
}
<fieldset>
<h2>Delete Resource</h2>

<h3>Are you sure you want to delete this? All statistics that belong to this will also be deleted.</h3>

    <legend></legend>

    <div class="display-label">NumberAvailable</div>
    <div class="display-field">@Model.NumberAvailable</div>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Center</div>
    <div class="display-field">@(Model.Center == null ? "None" : Model.Center.Name)</div>

    <div class="display-label">GivenResources</div>
    <div class="display-field">@(Model.GivenResources == null ? "None" : Model.GivenResources.Count.ToString())</div>

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> 
       
    </p>
     @Html.ActionLink("Back to List", "Edit")
}
</fieldset>

