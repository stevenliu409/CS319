@model OFRPDMS.Areas.Staff.Models.ResourceViewModelsEdit

@{
    ViewBag.Title = "Edit";
}
<fieldset>
<h2>Enter On-Hand Quantities of Each Resource</h2>
<p>
    @Html.ActionLink("Create a New Resource", "Create")
</p>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table class= "hovered">
        <tr>
            <th>
               Enter Current Stock Count
            </th>            
            <th>
                Current Stock
            </th>
            <th>
                Total Handed Out
            </th>
            <th>
                Name
            </th>
            <th>
                Other Action
            </th>
        </tr>
        <tr>
            @Html.EditorFor(x => x.Resources)
        </tr>
    </table>
    <input type="submit" value="Save" />       
    
}

</fieldset>
