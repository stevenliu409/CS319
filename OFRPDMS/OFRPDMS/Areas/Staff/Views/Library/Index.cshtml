@model IEnumerable<OFRPDMS.Models.LibraryResource>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Broken
        </th>
        <th>
            CheckedOut
        </th>
        <th>
            Value
        </th>
        <th>
            Image
        </th>
        <th>
            Note
        </th>
        <th>
            Name
        </th>
        <th>
            ItemType
        </th>
        <th>
