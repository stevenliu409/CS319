@model IEnumerable<OFRPDMS.Models.LibraryResource>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Broken
        </th>
        <th>
            CheckedOut
        </th>
        <th>
            Value
        </th>
        <th>
            Image
        </th>
        <th>
            Note
        </th>
        <th>
            Name
        </th>
        <th>
            ItemType
        </th>
        <th>
            Sanitized
        </th>
        <th>
            Checked out by
        </th>
        <th>
            Center
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Broken
        </td>
        <td>
			@item.CheckedOut
        </td>
        <td>
			@String.Format("{0:F}", item.Value)
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Image).ToString()
        </td>
        <td>
			@item.Note
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.ItemType
        </td>
        <td>
			@item.Sanitized
        </td>
        <td>
			@(item.PrimaryGuardianBorrows == null ? "None" : item.PrimaryGuardianBorrows.Count.ToString())
        </td>
        <td>
			@(item.Center == null ? "None" : item.Center.Name)
        </td>
    </tr>
}

</table>
