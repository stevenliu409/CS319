        @Html.DisplayFor(model => a.RelationshipToGuardian)
        </div>
        <b class="display-label">Allergies</b>
        <div class="display-field">
        @Html.DisplayFor(model => a.Allergies)
        </div>


    }
    </div>

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
</fieldset>
