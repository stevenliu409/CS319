        @Html.DisplayFor(model => model.Allergies)
    </div>

    <b class="display-label">Center</b>
    <div class="display-field">
        @Html.DisplayFor(model => model.Center.Name)
    </div>

   

    
  <div>
    @foreach (var secondaryguardian in Model.SecondaryGuardians)
    {
    
        <b class="display-label">Secondary Guardian</b>
        <div></div>
