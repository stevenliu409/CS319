        <div class="display-field">
        @Html.DisplayFor(model => secondaryguardian.RelationshipToChild)
        </div>
  
        
   
    }
   </div>



    <div>
    @foreach (var a in Model.Children)
    {
   
        <b class="display-label">Child</b>
        <div></div>
        <b class="display-label">First Name</b>
        <div class="display-field">
        @Html.DisplayFor(model => a.FirstName)
        </div>
        <b class="display-label">Last Name</b>
        <div class="display-field">
        @Html.DisplayFor(model => a.LastName)
        </div>
        <b class="display-label">Birthdate</b>
        <div class="display-field">
        @Html.DisplayFor(model => a.Birthdate)
        </div>
        <b class="display-label">RelationshipToChild</b>
