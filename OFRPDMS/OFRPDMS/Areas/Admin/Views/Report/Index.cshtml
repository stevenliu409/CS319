@model OFRPDMS.Areas.Admin.Models.Report
@using OFRPDMS.Models

@{
    ViewBag.Title = "Index";
}
<fieldset>
<h2>Report</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


 <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
 <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
 <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
  
     <script type="text/javascript">
         $(function() {
             $(".pickDate").datepicker({

                 dateFormat: 'yy-mm-dd',
                 showOn: "both",
                 buttonText: "Calendar",
                 buttonImage: "../../Content/themes/base/images/calendar.png",
                 buttonImageOnly: true,
                 yearRange: "-20:+0",
                 changeMonth: true,
                 changeYear: true,
                 maxDate: new Date()
              
               });
         });
     </script>
@using (Html.BeginForm("Generate", "Report"))
{
    @Html.ValidationSummary(true)
    
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.startDay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.startDay)
            @Html.ValidationMessageFor(model => model.startDay)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.endDay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.endDay)
            @Html.ValidationMessageFor(model => model.endDay)
        </div>

        <p>
            <input type="submit" value="Generate Report" title= "Generate Report" />
        </p>

 
}


@using (Html.BeginForm("GenerateExcel", "Report"))
{
    @Html.ValidationSummary(true)
  

        <div>Download Excel File</div>


        <div class="editor-label">
            @Html.LabelFor(model => model.dstart, "Start Date")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dstart, "Start Date")
            @Html.ValidationMessageFor(model => model.startDay)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.dend, "End Date")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dend, "End Date")
            @Html.ValidationMessageFor(model => model.endDay)
        </div>
        <br />

        <div class="editor-label">
            @Html.Label("id", "Excel Version")
        </div>
        <div class="editor-field">
            @Html.RadioButton("mode", 1, true) Excel 2003 and older (.xls format recommended for compatability)<br />
            @Html.RadioButton("mode", 2) Excel 2007 and newer (.xlsx format)<br />
            @Html.RadioButton("mode", 3) CSV file <br />
        </div>

        <p>
            <input type="submit" value="Download Report" title= "Download Report" />
        </p>
  
}
</fieldset>
