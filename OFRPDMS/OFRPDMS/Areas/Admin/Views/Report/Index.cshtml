        <p>
            <input type="submit" value="Generate Report" title= "Generate Report" />
        </p>
    </fieldset>
}

@using (Html.BeginForm("TrackPG/", "Report")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Visit History</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.startDay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.startDay)
            @Html.ValidationMessageFor(model => model.startDay)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.endDay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.endDay)
            @Html.ValidationMessageFor(model => model.endDay)
        </div>

        <div class = "search">
        <script src="/Scripts/jquery.tmpl.js" type="text/javascript"></script>
<script src="/Scripts/jquery.tmpl.min.js" type="text/javascript"></script>
<div id = "Search_box"> Search: 
<input type = "text" id = "PrimaryFirstName" /> 
<select id = "ptype"> 
<option>Primary</option>
<option>Secondary</option>
<option>Child</option>
</select>
<input type = "button" id = "search_btn" value = "Search" />

</div>


<script type = "text/javascript">
    function myFunction(id) {
        var _type = document.getElementById("ptype").value;
        $.ajax({
            url: '/Admin/Report/Add',
            type: "POST",
            datatype: "json",
            data: { id: id, type: _type },
            success: function () { }
        });
    }
</script>

<script id = "tabletemplate" type = "text/x-jquery-tmpl">
<tr>
    <td>${Fname}</td>
    <td>${Lname}</td>
    <td>${email}</td>
    <td>${phone}</td>
    <td>${prefix}</td>
    <td>${datacreate}</td>
    <td>${lang}</td>
    <td>${country}</td>
    <td><input type = "button" value = "Add" onclick = "myFunction(${id})" /></td>
</tr>
</script>

<script type = "text/javascript">
    $("#search_btn").click(function () {
        var text = document.getElementById("PrimaryFirstName").value;
        var _type = document.getElementById("ptype").value.toString();
        $.ajax({
            url: '/Admin/Report/Search',
            type: "POST",
            datatype: "json",
            data: { name: text, type: _type },
            success: function (data) {
                $('#datatable').empty();
                $('#tabletemplate').tmpl(data).appendTo('#datatable');
            }
        });
    });
</script>


    <table>
    <thead>
        <tr>
            <th>
              FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
			     Phone
            </th>
            <th>
			    PostalCodePrefix
            </th>
            <th>
			    DateCreated
            </th>
            <th>
			    Language
            </th>
            <th>
			    Country
            </th>
        </tr>
        </thead>
       <tbody id = "datatable" >
    
        </tbody>
        </table>


        </div>

        <p>
            <input type="submit" value="Check Visit History"/>
            @Html.ActionLink("Report", "TrackPG", new {s="dd",  })
        </p>
    </fieldset>
}

